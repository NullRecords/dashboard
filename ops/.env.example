# Personal Dashboard - Docker Environment Configuration
# Copy this file to .env and fill in your values
#
# Usage: docker-compose -f docker-compose.multi.yml up -d

# ============================================================================
# Dashboard Identity
# ============================================================================
DASHBOARD_USER=parker
DASHBOARD_HOSTNAME=parker.hoth.home
DASHBOARD_PORT=8020
TZ=America/Chicago

# ============================================================================
# Git Configuration (for nightly backups)
# ============================================================================
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com
GIT_TOKEN=ghp_your_github_personal_access_token
GIT_BRANCH=parker
GIT_AUTO_PUSH=true
GIT_REPO_URL=https://github.com/your-org/dashboard.git
ENABLE_NIGHTLY_BACKUP=true

# ============================================================================
# Ollama Configuration
# ============================================================================
# Use 'http://ollama:11434' when using docker-compose with ollama service
# Use 'http://host.docker.internal:11434' to connect to host machine's ollama
# Use 'http://192.168.x.x:11434' for remote ollama server
OLLAMA_HOST=http://ollama:11434
OLLAMA_DISABLED=false

# ============================================================================
# Google OAuth (Calendar, Gmail, etc.)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================================
# GitHub Integration
# Create token at: https://github.com/settings/tokens
# ============================================================================
GITHUB_TOKEN=ghp_your_github_token

# ============================================================================
# TickTick Integration (optional)
# ============================================================================
TICKTICK_CLIENT_ID=
TICKTICK_CLIENT_SECRET=

# ============================================================================
# Weather & News APIs
# ============================================================================
# OpenWeather: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# NewsAPI: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key

# ============================================================================
# AI Providers (optional - Ollama is primary)
# ============================================================================
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# ============================================================================
# Application Settings
# ============================================================================
APP_ENV=production
LOG_LEVEL=INFO
